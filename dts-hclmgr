# :command.initialize
initialize() {
  version="0.1.0"
  long_usage=''
  set -e

}

# :command.run
run() {
  declare -A args=()
  declare -A deps=()
  declare -a other_args=()
  declare -a input=()
  normalize_input "$@"
  parse_requirements "${input[@]}"

  case "$action" in
    "cpu") dts_hclmgr_cpu_command ;;
    "memory") dts_hclmgr_memory_command ;;
    "gpu") dts_hclmgr_gpu_command ;;
    "mainboard") dts_hclmgr_mainboard_command ;;
  esac
}

initialize
run "$@"
